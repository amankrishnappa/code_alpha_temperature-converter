//css

body {
    font-family: Arial, sans-serif;
    text-align: center;
  }
  
  h1 {
    margin-top: 50px;
  }
  
  input[type="number"] {
    width: 200px;
    padding: 10px;
    font-size: 16px;
  }
  
  select {
    padding: 10px;
    font-size: 16px;
  }
  
  button {
    padding: 10px 20px;
    font-size: 16px;
  }
  
  #convertedTemperature {
    margin-top: 20px;
    font-size: 18px;
  }
  
  //js
  
  unction convertTemperature() {
  var inputTemperature = parseFloat(document.getElementById("inputTemperature").value);
  var unitSelection = document.getElementById("unitSelection").value;
  var convertedTemperature;

  if (unitSelection === "celsius") {
    convertedTemperature = (inputTemperature * 9/5) + 32;
  } else if (unitSelection === "fahrenheit") {
    convertedTemperature = (inputTemperature - 32) * 5/9;
  }

  document.getElementById("convertedTemperature").innerHTML = "Converted Temperature: " + convertedTemperature.toFixed(2) + "Â°";
}
